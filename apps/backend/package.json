{
    "name": "@billing_system/backend",
    "version": "1.0.0",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
      "dev": "tsx watch src/server.ts",
      "build": "tsc && tsc-alias",
      "start": "node dist/server.js",
      "test": "vitest",
      "test:coverage": "vitest --coverage",
      "seed": "tsx src/scripts/seed.ts",
      "migrate": "prisma migrate dev",
      "migrate:reset": "prisma migrate reset",
      "migrate:deploy": "prisma migrate deploy",
      "generate": "prisma generate",
      "studio": "prisma studio",
      "lint": "eslint src --ext .ts",
      "lint:fix": "eslint src --ext .ts --fix",
      "type-check": "tsc --noEmit"
    },
    "dependencies": {
      "express": "^4.18.2",
      "cors": "^2.8.5",
      "helmet": "^7.1.0",
      "compression": "^1.7.4",
      "morgan": "^1.10.0",
      "dotenv": "^16.3.1",
      "zod": "^3.22.4",
      "jsonwebtoken": "^9.0.2",
      "argon2": "^0.31.2",
      "sqlite3": "^5.1.6",
      "prisma": "^5.7.1",
      "@prisma/client": "^5.7.1",
      "express-rate-limit": "^7.1.5",
      "puppeteer": "^21.6.1",
      "nodemailer": "^6.9.7",
      "multer": "^1.4.5-lts.1",
      "csv-parser": "^3.0.0",
      "xlsx": "^0.18.5",
      "qrcode": "^1.5.3",
      "uuid": "^9.0.1",
      "date-fns": "^2.30.0"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
      "@types/compression": "^1.7.5",
      "@types/morgan": "^1.9.9",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/sqlite3": "^3.1.11",
      "@types/nodemailer": "^6.4.14",
      "@types/multer": "^1.4.11",
      "@types/uuid": "^9.0.7",
      "@types/node": "^20.10.0",
      "typescript": "^5.3.3",
      "tsx": "^4.6.2",
      "tsc-alias": "^1.8.8",
      "@typescript-eslint/eslint-plugin": "^6.14.0",
      "@typescript-eslint/parser": "^6.14.0",
      "eslint": "^8.55.0",
      "vitest": "^1.0.4",
      "supertest": "^6.3.3",
      "@types/supertest": "^6.0.2",
      "@vitest/coverage-v8": "^1.0.4"
    },
    "engines": {
      "node": ">=20.0.0"
    }
